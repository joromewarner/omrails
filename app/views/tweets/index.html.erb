<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card card-block">
      <% if user_signed_in? %>
        <h4 class="card-title">Your Account</h4>
      <p class="card-text"> <%  link to current_user.username, user_ path(current_user.username) %> </p>
      <% else %>
      <p class="card-text"> <%  link to "Sign up now!", signup_path %> </p>
      <a href="#" class="card-link">Card Link</a>
      <a href="#" class="card-link">Another Link</a>
  </div>
</div>
    </div>
  <div class="col-md-8">

    <% if user_signed_in? %>
      <center><%= link_to 'New Tweet', new_tweet_path %></center>
    <% end %>
    <ul class="list-group">
      <% @tweets.each do |tweet| %>
        <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
          <h5 class="list-group-heading"><%= tweet.user.username%></h5>
          <p class="list-group-item-text"><%= tweet.context %></p>
              <% if tweet.user == current_user %>
                <%= link_to 'Edit', edit_tweet_path(tweet) %>
                <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
          <% end %>
    <% end %>
    </ul>


    </div>
  </div>
</div>

